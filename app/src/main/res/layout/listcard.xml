<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:elevation="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="#332196F3"
        >


        <TextView
            android:id="@+id/name_t_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/name_c_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_toRightOf="@+id/name_t_id"
            android:textAllCaps="true"
            android:textColor="#673AB7"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/email_t_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:layout_below="@+id/name_c_id"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/email_c_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/email_t_id"
            android:layout_below="@+id/name_c_id"
            />
        <TextView
            android:id="@+id/mobile_t_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile:"
            android:layout_below="@+id/email_c_id"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/mobile_c_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mobile"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/mobile_t_id"
            android:textSize="20sp"
            android:layout_below="@+id/email_c_id"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>